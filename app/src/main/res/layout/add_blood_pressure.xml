<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/blood_pressure_bottom_sheet"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_bottom_dialog"
    android:padding="20dp"
    android:layout_gravity="center"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/imageView8"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/ic_health_care" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:textSize="19sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:text="Add Current Blood Pressure" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/diastolic"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded_corners_edit_views" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slash"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/systolic"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_corners_edit_views" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mmHg"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="126dp"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        >

        <TextView
            android:id="@+id/plusBP"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/check_circle"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"/>

        <TextView
            android:id="@+id/dismiss"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:background="@drawable/remove_circle"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>